{% extends 'base.html.twig' %}

{% block title %}Projects{% endblock %}

{% block body %}

<div class="header-project-page">
    <div class="container">
        <div class="row">
            <div class="ol-md-8 col-md-offset-2 col-sm-9 col-sm-offset-3 col-xs-12 project-padding">
                <h1 class="main-title text-center">{{ project.name }}</h1>
            </div>
        </div>
        <div class="row">
            <div class="col-md-2 col-sm-3 col-xs-12">
                <h2 class="second-title">Le projet</h2>
                <span class="second-title">{{ project.date ? project.date|date('d-m-Y') }}</span>
            </div>
            <div class="col-md-8 col-sm-9 col-xs-12 project-padding">
                <p>{{ project.description }}</p>
                <a href="{{ project.link }}" class="project-link" target="_blank">Voir le projet</a>
            </div>
        </div>
    </div>
</div>
<div class="main-project-page">
    <div class="container-image">
        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                {% for picture in project.picture %}
                <li data-target="#carouselExampleIndicators" data-slide-to="{{ loop.index0 }}" class="{% if loop.index == 1 %}active{% endif %}"></li>
                {% endfor %}
            </ol>
            <div class="carousel-inner">
                {% for picture in project.picture %}
                    <div class="carousel-item {% if loop.index == 1 %}active{% endif %}">
                        <img src="{{ picture.name }}" class="d-block w-100" alt="{{ project.name }}">
                    </div>
                {% endfor %}
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
        </div>
        <div class="container-technos">
            <div class="caption">
                Technologies utilisées
            </div>
            {% for techno in project.techno %}
                {{ techno.name }} /
            {% endfor %}
        </div>
        <div class="container">
            <div class="row">
                <div class="col-md-2 col-sm-3 col-xs-12">
                    <h2 class="second-title">Le Client</h2>
                </div>
                <div class="col-md-8 col-sm-9 col-xs-12 project-padding">
                    {% for client in project.client %}
                        <p>Grâce à la {{ dump(client) }}</p>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
    <div class="footer-project-page">
        <nav class="navbar navbar-expand-lg navbar-light">
            <a class="navbar-brand" href="{{ path('project_show', {'slug':project.slug}) }}">Précédent</a>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto"></ul>
                <div class="form-inline my-2 my-lg-0">
                    <a class="navbar-brand" href="{{ path('project_show', {'slug':project.slug}) }}"
                       target="_blank">Suivant</a>
                </div>
            </div>
        </nav>
    </div>
    <div class="logo-linkedin">
        <a href="https://www.linkedin.com/in/st%C3%A9phane-acloque-b679751a4/" target="_blank" title="Linkedin"><img
                    src="{{ asset('img/linkedin.svg') }}" alt="logo LinkedIn" class="text-center"></a>
    </div>
    {% endblock %}
