{% extends 'base.html.twig' %}

{% block title %}Technos index{% endblock %}
{% block header %}{% endblock %}
{% block body %}
    <main class="index-admin">
        {% include 'admin/_menu-admin.html.twig' %}
        <div class="container-right">
            <h1 class="text-center">Liste des Technos</h1>


            {% for techno in technos %}
                <div class="container-card">
                    <div class="image">
                        <img src="{{ vich_uploader_asset(techno, 'technoFile') }}"
                             alt="{{ techno.name }}"/>
                    </div>
                    <div class="title">{{ techno.title }}</div>
                    <div class="container-button-edit-delete">
                        <a class="btn-edit" href="{{ path('admin_techno_edit', {'id': techno.id}) }}">Editer</a>
                        {{ include('admin/techno/_delete_form.html.twig') }}
                    </div>
                </div>
            {% else %}
                <div class="d-flex justify-content-center align-items-center empty-message">
                    AUCUNE TECHNOS
                </div>
            {% endfor %}

            <div class="d-flex justify-content-center align-items-center flex-column">
                <a class="add" href="{{ path('admin_techno_new') }}">Ajouter une techno</a>
                <a class="button-back-home-mobile" href="{{ path('admin_project_index') }}">Retour</a>
                <a class="button-back-home" href="{{ path('admin_project_index') }}">Retour</a>
            </div>
        </div>
    </main>
{% endblock %}
