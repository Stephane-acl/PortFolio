{% extends 'base.html.twig' %}

{% block title %}Editer utilisateur{% endblock %}
{% block header %}{% endblock %}
{% block body %}
    <main class="index-admin">
        {% include 'admin/_menu-admin.html.twig' %}
        <div class="form-edit">
            <h1 class="text-center">Editer mon profil</h1>
            <div class="container h-100">
                <div class="row justify-content-center align-items-center">
                    <div class="col-12 col-md-10 col-lg-8">
                        {{ include('admin/user/_passForm.html.twig') }}
                        {{ include('admin/user/_form.html.twig', {'button_label': 'Modifier'}) }}
                    </div>
                </div>
            </div>
        </div>
    </main>
{% endblock %}

{% block javascripts %}
    <script>
        $('.custom-file-input').on('change', function (event) {
            var inputFile = event.currentTarget;
            $(inputFile).parent()
                .find('.custom-file-label')
                .html(inputFile.files[0].name);
        });
    </script>
{% endblock %}
