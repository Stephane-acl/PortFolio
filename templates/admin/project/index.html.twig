{% extends 'base.html.twig' %}

{% block title %}Projects index{% endblock %}

{% block body %}
    <h1 class="text-center">Liste des Projets</h1>
    <div class="container h-100">
        <div class="row h-100 justify-content-center align-items-center">
            <div class="col-12 col-md-10 col-lg-8">
                <table class="table">
                    <thead>
                    <tr>
                        <th>Id</th>
                        <th>Nom</th>
                        <th>Description</th>
                        <th>Date</th>
                        <th>actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for project in projects %}
                        <tr>
                            <td>{{ project.id }}</td>
                            <td>{{ project.name }}</td>
                            <td>{{ project.description }}</td>
                            <td>{{ project.date ? project.date|date('Y-m-d') }}</td>
                            <td>
                                <a href="{{ path('project_show', {'slug': project.slug}) }}">Voir</a>
                                <a href="{{ path('project_edit', {'slug': project.slug}) }}">Editer</a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="5">no records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <a href="{{ path('project_new') }}">Cr√©er un nouveau projet</a><br />
    <a href="{{ path('admin_index') }}">Retour</a>
{% endblock %}
