{% extends 'base.html.twig' %}

{% block title %}Pictures{% endblock %}

{% block body %}
    <div class="container h-100">
        <div class="row h-100 justify-content-center align-items-center">
            <div class="col-12 col-md-10 col-lg-8">
                <h1>Photo</h1>

                <table class="table">
                    <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ picture.id }}</td>
                    </tr>
                    <tr>
                        <th>Photo</th>
                        <td><img src="{{ picture.name }}" height="350px"></td>
                    </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <a href="{{ path('picture_index') }}">Retour</a><br />

    <a href="{{ path('picture_edit', {'id': picture.id}) }}">Editer</a>

    {{ include('admin/picture/_delete_form.html.twig') }}
{% endblock %}
