{% extends 'base.html.twig' %}

{% block title %}Clients index{% endblock %}
{% block header %}{% endblock %}
{% block body %}
    <h1 class="text-center">Liste des Clients</h1>

    <div class="container h-100">
        <div class="row h-100 justify-content-center align-items-center">
            <div class="col-12 col-md-10 col-lg-8">
                <table class="table">
                    <thead>
                    <tr>
                        <th>Id</th>
                        <th>Nom</th>
                        <th>action</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for client in clients %}
                        <tr>
                            <td>{{ client.id }}</td>
                            <td>{{ client.name }}</td>
                            <td>
                                <a href="{{ path('admin_client_edit', {'id': client.id}) }}">editer</a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="3">no records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <a href="{{ path('admin_client_new') }}">Cr√©er un nouveau client</a><br />
    <a href="{{ path('admin_project_index') }}">Retour</a>
{% endblock %}
